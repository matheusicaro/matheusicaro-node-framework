{
  "name": "matheusicaro-node-framework",
  "version": "1.1.0-alpha.1.0",
  "description": "My custom basic configuration setups for a quick build of services and APIs for Node.",
  "author": "@matheusicaro",
  "license": "MIT",
  "homepage": "https://github.com/matheusicaro/mi-node-framework#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheusicaro/mi-node-framework.git"
  },
  "bugs": {
    "url": "https://github.com/matheusicaro/mi-node-framework/issues"
  },
  "keywords": [
    "Node",
    "Typescript",
    "Framework",
    "tsyringe",
    "express",
    "winston"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "pre-publish": "npm run build & npm publish",
    "lint": "eslint . ",
    "precommit": "lint-staged",
    "prepare": "sh ./scripts/prepare.sh",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "dependencies": {
    "express": "^4.21.2",
    "fishery": "^2.2.2",
    "globals": "^15.12.0",
    "logform": "^2.7.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@faker-js/faker": "^9.3.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
